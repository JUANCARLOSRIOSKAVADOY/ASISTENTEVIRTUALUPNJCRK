@using Negocio
@using Entidades
@{
    List<BeMenu> listado = ViewBag.ListadoMenu as List<BeMenu>;

    var listadoEnBienvido = listado.Where(x => x.enBienvenida == false);

}

@if ( listadoEnBienvido.Count<BeMenu>() > 0 ) {

    <aside class="sidebar offscreen-left"> 
        <nav class="main-navigation" data-height="auto" data-size="6px" data-distance="0" data-rail-visible="true" data-wheel-step="10">
            <p class="nav-title">MENU</p>
            <ul class="nav">
                @foreach (BeMenu obj in listado) {
                    if (obj.enBienvenida == false) {              
                        <li>
                            <a href="@obj.url">
                                <i class="ti-home"></i>
                                <span>@obj.descripcion</span>
                            </a>
                        </li>
                    }
                }
            </ul>
    </nav>
    </aside>

}